{
  "scripts": {
    "install:ui": "install-ui --audio=./public/audio --framework=./src/framework",
    "install:brixi": "brixi && mv ./brixi/brixi.css ./src/stylesheets/brixi.css && rmdir ./brixi",
    "bundle": "node ./build/bundle.js",
    "watch": "run-p watch:*",
    "watch:build": "npm-watch",
    "watch:serve": "serve ./public",
    "lint": "tsc && rm -rf ./_types",
    "build": "run-p build:*",
    "build:js": "twist --type=esbuild",
    "build:css": "cssmonster --env=dev",
    "production": "run-s production:*",
    "production:install": "npm run install:brixi && npm run install:ui",
    "production:bundle": "npm run bundle",
    "production:js": "twist --type=esbuild",
    "production:css": "cssmonster --env=production",
    "deploy": "npm run production && node ./build/deploy.js"
  },
  "devDependencies": {
    "@codewithkyle/jsql": "^1.2.0",
    "@codewithkyle/modal-maker": "^1.1.1",
    "@codewithkyle/notifyjs": "^3.1.1",
    "@codewithkyle/pubsub": "^1.1.1",
    "@codewithkyle/router": "^2.1.0",
    "@codewithkyle/supercomponent": "^1.3.0",
    "@codewithkyle/twist": "^2.0.2",
    "@codewithkyle/uuid": "^1.0.1",
    "brixi": "^0.6.2",
    "brixi-ui": "^0.5.0",
    "cssmonster": "^0.5.0",
    "dayjs": "^1.11.5",
    "dotenv": "^16.0.3",
    "esbuild": "^0.15.10",
    "esinstall": "^1.1.7",
    "flatpickr": "^4.6.13",
    "fuse.js": "^6.6.2",
    "gh-pages": "^4.0.0",
    "glob": "^8.0.3",
    "lit-html": "^2.4.0",
    "npm-run-all": "^4.1.5",
    "npm-watch": "^0.11.0",
    "sass": "^1.55.0",
    "serve": "^14.0.1",
    "sortablejs": "^1.15.0",
    "tooltipper": "^1.1.4",
    "typescript": "^4.8.4"
  },
  "bundle": [
    "dayjs/plugin/relativeTime",
    "@codewithkyle/notifyjs",
    "@codewithkyle/modal-maker",
    "@codewithkyle/pubsub",
    "@codewithkyle/uuid",
    "tooltipper",
    "@codewithkyle/jsql",
    "@codewithkyle/router",
    "@codewithkyle/supercomponent",
    "@codewithkyle/modal-maker",
    "@codewithkyle/notifyjs",
    "flatpickr",
    "lit-html",
    "lit-html/directives/unsafe-html.js",
    "tooltipper",
    "dayjs",
    {
      "in": "fuse.js/dist/fuse.basic.esm.js",
      "out": "fuse.js"
    },
    "sortablejs"
  ],
  "watch": {
    "build": {
      "patterns": [
        "src"
      ],
      "extensions": "ts,js,scss,css,tsx,jsx,mjs,cjs",
      "quiet": false
    }
  }
}
